<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
    <definition name="error.page" template="/layout/base/error.jsp">
        <put-attribute name="error_code"/>
    </definition>


    <definition name="head_props" template="/definition/head_props.jsp">
        <put-list-attribute name="props">
        </put-list-attribute>
    </definition>
    <definition name="head" template="/definition/head.jsp">
        <put-attribute name="title"/>
        <put-attribute name="props" value="head_props"/>
    </definition>

    <definition name="script" template="/definition/script.jsp">
        <put-list-attribute name="scripts">
        </put-list-attribute>
    </definition>
    <definition name="body" template="/definition/body.jsp">
        <put-attribute name="content"/>
    </definition>

    <definition name="page" template="/layout/page.jsp">
        <put-attribute name="head" value="head"/>
        <put-attribute name="body" value="body"/>
    </definition>

    <definition name="admin.page" template="/layout/admin/admin.jsp">
        <put-attribute name="navheader"  />
        <put-attribute name="header"  />
        <put-attribute name="sidebar" />
        <put-attribute name="content" />
    </definition>
    <definition name="main.base" template="/layout/base/main.jsp">
        <put-attribute name="navheader"  />
        <put-attribute name="header"  />
        <put-attribute name="sidebar" />
        <put-attribute name="content" />
    </definition>
    <definition name="base.page" template="/layout/base/base.jsp">
        <put-attribute name="content"/>
    </definition>
    <definition name="onlyhead.page" template="/layout/base/onlyhead.jsp">
        <put-attribute name="navheader"  />
        <put-attribute name="header"  />
        <put-attribute name="content" />
    </definition>


</tiles-definitions>